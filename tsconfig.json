{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "rootDir": "./ts_src",
    "types": ["node", "jest"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["ts_src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "./node_modules/**/*"]
}
